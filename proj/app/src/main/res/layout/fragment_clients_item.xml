<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/clientItem_tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clientItem_tvSum"
        app:layout_constraintHorizontal_weight="1"
        style="@style/style_clientItem"/>

    <TextView
        android:id="@+id/clientItem_tvSum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/clientItem_tvName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        style="@style/style_clientItem"/>

    <TextView
        android:id="@+id/clientItem_tvRecordsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clientItem_tvName"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/style_clientItem.RecordsCount"/>


</androidx.constraintlayout.widget.ConstraintLayout>